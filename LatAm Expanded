        async function fetchHeadlines() {
            document.getElementById('btnText').textContent = 'Loading...';
            const res = await fetch('https://raw.githubusercontent.com/jgonzalez-sudo/news-data1/main/latam_headlines.json?' + Date.now());
            const data = await res.json();
            displayHeadlines(data);
            document.getElementById('btnText').textContent = 'Fetch';
        }
        function displayHeadlines(data) {
            const content = document.getElementById('content');
            content.innerHTML = '';
            Object.keys(newspapers).forEach(country => {
                const info = newspapers[country];
                const sec = document.createElement('div');
                sec.className = 'mb-6 bg-white rounded-lg shadow p-3';
                sec.innerHTML = `<h2 class="text-xl font-bold mb-2">${info.flag} ${country}</h2>` + 
                    (data.summaries?.[country] ? `<p class="text-xs text-gray-600 italic mb-3">${data.summaries[country]}</p>` : '');
                const grid = document.createElement('div');
                grid.className = 'news-grid';
                info.papers.forEach(paper => {
                    const headlines = data.headlines?.[`${country}-${paper.name}`] || [];
                    const card = document.createElement('div');
                    card.className = 'bg-gray-50 rounded p-2 text-xs';
                    card.innerHTML = `<div class="font-bold text-blue-700 mb-1">${paper.name}</div>`;
                    if (headlines.length > 0) {
                        headlines.slice(0, 5).forEach(h => {
                            card.innerHTML += `<div class="mb-2 border-b pb-1"><a href="${h.url}" target="_blank" class="hover:text-blue-600">${h.title}</a><div class="text-gray-500 text-xs">${h.time}</div></div>`;
                        });
                    } else {
                        card.innerHTML += '<div class="text-gray-400 py-2">No stories</div>';
                    }
                    grid.appendChild(card);
                });
                const intl = data.international?.[country] || [];
                if (intl.length > 0) {
                    const intlCard = document.createElement('div');
                    intlCard.className = 'bg-purple-50 rounded p-2 text-xs border-2 border-purple-200';
                    intlCard.innerHTML = '<div class="font-bold text-purple-700 mb-1">International</div>';
                    intl.slice(0, 5).forEach(s => {
                        intlCard.innerHTML += `<div class="mb-2 border-b pb-1"><span class="font-semibold text-purple-600">${s.source}</span><a href="${s.url}" target="_blank" class="block hover:text-purple-600">${s.title}</a></div>`;
                    });
                    grid.appendChild(intlCard);
                }
                sec.appendChild(grid);
                content.appendChild(sec);
            });
        }
    </script>
